{# src/At2com/MediaBundle/Resources/views/Default/index.html.twig #}
{% extends 'At2comMediaBundle::main_layout.html.twig' %}

{% block header_title %}Les médias{% endblock %}

{% block content_title %}Les médias{% endblock %}

{% block content %}

    {# Bloc d'insertion d'un média #}
    <div class="row">
        <div class="col-md-12">
            <h2>Insérer un média</h2>

            <div class="row">
                <div class="col-md-6">
                    <input id="media2download" type="file" name="media2download[]" media-type="document" multiple />
                </div>
            </div>

            <hr />
        </div>
    </div>


    {# Block d'affichage des medias #}
    <div class="row">
        <div class="col-md-12">
            <h2>Les médias disponibles</h2>
            {% if media is defined %}
                {% for media in medias %}
                    {{ media.title }}
                {% endfor %}
            {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pour l'instant aucun média.
            </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/4.4.4/css/fileinput.min.css" media="all" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/at2commedia/js/app.js') }}">

    </script>
{% endblock %}
